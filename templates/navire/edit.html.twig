{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Edit Navire{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-2" id="imo">
                {{ form_label(form.imo, 'IMO') }}
                {{ form_widget(form.imo,{'attr': {'placeholder':'IMO Number', 'readonly':'true'}}) }}
            </div>
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.nom, 'Nom du Navire') }}
                {{ form_widget(form.nom,{'attr': {'placeholder':'Saisir le nom du Navire'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.mmsi, 'MMSI') }}
                {{ form_widget(form.mmsi,{'attr': {'placeholder':'MMSI Number'}}) }}
            </div>
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.indicatifAppel, 'Indicatif VHF') }}
                {{ form_widget(form.indicatifAppel,{'attr': {'placeholder':'Indicatif VHF'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.longueur, 'Longueur') }}
                {{ form_widget(form.longueur,{'attr': {'placeholder':'Longueur'}}) }}
            </div>
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.largeur, 'Largeur') }}
                {{ form_widget(form.largeur,{'attr': {'placeholder':'Largeur'}}) }}
            </div>
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.tirantdeau, "Tirant d'eau") }}
                {{ form_widget(form.tirantdeau,{'attr': {'placeholder':"Tirant d'eau"}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.typeNavire, 'Type de Navire') }}
                {{ form_widget(form.typeNavire) }}
            </div>
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.pavillon, 'Pavillon') }}
                {{ form_widget(form.pavillon) }}
            </div>
        </div>
        <div class="row">
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.destination, 'Destination') }}
                {{ form_widget(form.destination) }}
            </div>
            <div class="col-2" id="some-custom-id">
                {{ form_label(form.eta, 'Estimated Time of Arrival') }}
                {{ form_widget(form.eta) }}
            </div>
        </div>
        <br>
        <a type='button' class='btn btn-success' style='width: 100px' href='{{ path('navire_voirtous') }}'>
            Retour
        </a>
        <button type='submit' style='width:100px' class='btn btn-success'>Modifier</button>
        {{ form_end(form) }}
    </div>
    <script type="text/javascript">
        // Map appearance
        var width = "100%";         // width in pixels or percentage
        var height = "300";         // height in pixels
        var names = true;           // always show ship names (defaults to false)

        // Single ship tracking
        var imo = {{ navire.getImo() }};        // display latest position (by IMO, overrides MMSI)
        var show_track = true;      // display track line (last 24 hours)
    </script>
    <script type="text/javascript" src="https://www.vesselfinder.com/aismap.js"></script>
{% endblock %}