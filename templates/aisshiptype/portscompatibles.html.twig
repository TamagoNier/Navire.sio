{% extends 'base.html.twig' %}

{% block title %}Ports Compatibles{% endblock %}

{% block body %}
    <center>
        <h2> Ports Compatibles </h2>
        <h2>Type de navire : {{ aisShipType.getId() }} {{ aisShipType.getLibelle() }}</h2>
    </center>
    {% if aisShipType.getPortsCompatibles() is empty%}
        <p class="text-danger text-center">Aucun port disponible pour ce navire</p>
    {% else %}
        <div class="container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col" style="width:100px">Indicatif</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Pays</th>
                        <th scope="col">Voir</th>
                    </tr>
                </thead>
                <tbody>
                    {% for port in aisShipType.getPortsCompatibles() %}
                        <tr class="table-primary">
                            <td>{{ port.getIndicatif() }}</td>
                            <td>{{ port.getNom() }}</td>
                            <td>{{ port.getPays().getNom() }}</td>
                            <td><a href="#">{{ port.getPays().getNom() }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}